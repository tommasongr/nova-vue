{
    "name": "nova-vue",
    "version": "0.6.2",
    "description": "This is a plugin providing Vue language support for the new [Nova editor from Panic](https://panic.com/nova/). Inspired by [Vetur](https://github.com/vuejs/vetur) and many other great Vue tools.",
    "main": "src/Scripts/main.js",
    "scripts": {
        "build": "npx rollup -c",
        "watch": "onchange -i \"src/**/*.js\" -- npm run build",
        "publish": "npx rollup -v && cp CHANGELOG.md README.md LICENSE Vue.novaextension"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tommasongr/nova-vue.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/tommasongr/nova-vue/issues"
    },
    "homepage": "https://github.com/tommasongr/nova-vue#readme",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^15.0.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@types/nova-editor-node": "^1.0.3",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "eslint": "^7.9.0",
        "eslint-plugin-nova": "^1.0.0",
        "onchange": "^7.0.2",
        "rollup": "^2.26.11",
        "typescript": "^4.0.2"
    },
    "dependencies": {}
}
