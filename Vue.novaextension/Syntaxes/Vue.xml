			<!-- LESS -->
			<scope name="vue.embedded.block.style" spell-check="false" lookup="documentation">
				<starts-with>
					<expression>(?=&lt;(?i:style)\b)(?=[^&gt;]*lang=('less'|\"less\"))(?![^/&gt;]*/&gt;\s*$)</expression>
