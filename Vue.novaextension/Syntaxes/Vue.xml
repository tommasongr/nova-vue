						</subscopes>
					</scope>
					<scope name="vue.embedded.block.template.content">
						<starts-with>
							<expression>(?&lt;=&gt;)</expression>
						</starts-with>
						<ends-with>
							<expression>^(?=&lt;/(?i:template)\b)</expression>
						</ends-with>
						
						<subsyntax name="vue-html" noncontiguous="true" export-symbols="true">
							<cut-off>
								<expression>^(?=&lt;/(?i:template)\b)</expression>
							</cut-off>
						</subsyntax>
					</scope>
				</subscopes>
			</scope>
		</collection>
		
